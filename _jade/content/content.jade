block variables
  - var classname = ""
  - var smallpanel = false

if smallpanel
  .content-panel.content-panel-small(class="#{classname}-panel")
  
    .content-panel-header
      block header

      block description

else
  .content-panel(class="#{classname}-panel")

    .content-panel-header
      block header

      block description

    block figure
      figure
