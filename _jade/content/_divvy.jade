extends content

block variables
  - var classname = "divvy"
  - var smallpanel = false

block header
  h1
    a(id="#{classname}", href="https://divvy.lol") Divvy

block description
  p
    | I designed and developed the Divvy 
    strong web app 
    | to easily split bills between friends.
    | Add the expenses for each person and Divvy will find the most efficient sequence of repayments.
  hr.black-line
  a.button-white(href="https://divvy.lol") https://divvy.lol&nbsp;&rarr;

block figure
  figure
    img(srcset="/img/divvy.png 1x, /img/divvy@2x.png 2x" src="/img/divvy@2x.png" alt="Divvy web app")
    .divvy-recording
      .notch
      img(srcset="/img/divvy.gif 1x, /img/divvy@2x.gif 2x" src="/img/divvy@2x.gif" alt="Divvy web app")
