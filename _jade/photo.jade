extends layout

block append variables
  - var title = "Photography"
  - var description = "Some photos I have taken from around the world"
  - var slug = "photo"
  - var card = "photo/card-clg-photo.jpg"
  - var frontPage = false
  - var fullScreenPage = true

block headExtra
