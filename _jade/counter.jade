extends layout

block append variables
  - var title = "Altar Tron Counter for Magic: The Gathering"
  - var description = "A custom counter to assist tracking information when playing Altar Tron"
  - var slug = "counter"
  - var card = ""
  - var frontPage = false
  - var fullScreenPage = true

block headExtra
  link(rel="stylesheet", href="counter.css", async)
  meta(name="apple-mobile-web-app-title", content="Altar Tron")
  meta(name="apple-mobile-web-app-capable", content="yes")
  meta(name="apple-mobile-web-app-status-bar-style", content="black-translucent")
  link(rel="apple-touch-icon", href="icon-counter.png")

block viewport
  meta(name="viewport", content="width=device-width, initial-scale=1, viewport-fit=cover")


block header

