block variables
  - var title = "Product designer & coder"
  - var description = "Cody Lindsay Gordon is a product designer & coder with a degree in Architectural design and an affinity for heavy metal."
  - var slug = ""
  - var card = "card-clg.png"
  - var frontPage = true

doctype html
html(lang="en")

  head

    title #{title} &rarr; Cody Lindsay Gordon
    meta(name="description", content="#{description}")
    meta(name="theme-color", content="#26282e")
    meta(charset="utf-8")
    meta(name="viewport", content="initial-scale=1")
    meta(name="author", content="Cody Lindsay Gordon")
    meta(name="google-site-verification", content="ZkjeR5dDgGZ5iIrCxvCjqgPrhHp6dco-Jck7IWutYZo")

    //- Opengraph
    meta(property="og:title", content="#{title}")
    meta(property="og:site_name", content="Cody Lindsay Gordon")
    meta(property="og:description", content="#{description}")
    meta(property="og:type", content="website")
    meta(property="og:url", content="http://clg.name/#{slug}")
    meta(property="og:image", content="http://clg.name/#{card}")

    //- iOS webclip
    meta(name="apple-mobile-web-app-title", content="clg")
    link(rel="apple-touch-icon", href="apple-touch-icon.png")

    link(rel="icon", href="favicon.svg")
