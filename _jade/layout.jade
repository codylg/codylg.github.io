block variables
  - var title = "Product designer & developer"
  - var description = "Cody Lindsay Gordon is an Australian product designer & developer with a degree in Architectural design and an affinity for heavy metal."
  - var slug = ""
  - var card = "card-clg.png"
  - var frontPage = true

doctype html
html(lang="en")

  head

    title #{title} &rarr; Cody Lindsay Gordon
    meta(name="description", content="#{description}")
    meta(name="robots", content="NOODP")
    meta(name="theme-color", content="#26282e")
    meta(charset="utf-8")
    meta(name="viewport", content="initial-scale=1")
    meta(name="author", content="Cody Lindsay Gordon")
    meta(name="google-site-verification", content="ZkjeR5dDgGZ5iIrCxvCjqgPrhHp6dco-Jck7IWutYZo")

    //- Opengraph
    meta(property="og:title", content="#{title}")
    meta(property="og:site_name", content="Cody Lindsay Gordon")
    meta(property="og:description", content="#{description}")
    meta(property="og:type", content="website")
    meta(property="og:url", content="http://clg.name/#{slug}")
    meta(property="og:image", content="http://clg.name/#{card}")

    //- iOS webclip icons
    link(rel="apple-touch-icon", href="touch-icon-iphone.png")
    link(rel="apple-touch-icon", sizes="76x76", href="touch-icon-ipad.png")
    link(rel="apple-touch-icon", sizes="120x120", href="touch-icon-iphone-retina.png")
    link(rel="apple-touch-icon", sizes="152x152", href="touch-icon-ipad-retina.png")
    link(rel="apple-touch-icon", sizes="180x180", href="touch-icon-iphone-plus-retina.png")

    link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")
    link(rel="stylesheet", href="/static/styles.css", async)

    script(type="text/javascript", src="/static/picturefill.min.js", async)

