block variables
  - var title = "UX & Product Design"
  - var description = "Cody Lindsay Gordon is an Australian product designer & coder with over a decade of experience in user-centered design practices."
  - var slug = ""
  - var card = "card-clg.png"
  - var frontPage = true

doctype html
html(lang="en")

  head

    title #{title} &rarr; Cody Lindsay Gordon
    meta(name="description", content="#{description}")
    meta(name="theme-color", content="#26282e")
    meta(charset="utf-8")
    meta(name="viewport", content="initial-scale=1")
    meta(name="author", content="Cody Lindsay Gordon")
    meta(name="google-site-verification", content="ZkjeR5dDgGZ5iIrCxvCjqgPrhHp6dco-Jck7IWutYZo")

    //- Opengraph
    meta(property="og:title", content="#{title}")
    meta(property="og:site_name", content="Cody Lindsay Gordon")
    meta(property="og:description", content="#{description}")
    meta(property="og:type", content="website")
    meta(property="og:url", content="http://clg.name/#{slug}")
    meta(property="og:image", content="http://clg.name/#{card}")

    //- iOS webclip
    meta(name="apple-mobile-web-app-title", content="clg")
    link(rel="apple-touch-icon", href="apple-touch-icon.png")

    link(rel="icon", href="/favicon.svg")
    link(rel="stylesheet", href="/static/styles.css", async)

    block headExtra

  body

    script(async, src="https://www.googletagmanager.com/gtag/js?id=G-WG17R2RGYP")
    script.
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-WG17R2RGYP');

    block header
      include _header

    block content
