extends layout

block append variables
  - var title = "Double exposure depth experiment"
  - var description = "This is a test"
  - var slug = "dede"
  - var frontPage = false
  
block headExtra
  link(rel="stylesheet", href="/dede/dede.css", async)
  script(type="text/javascript", src="/dede/dede.js", async)

block header

block content

  header
    div
      h1 Double exposure depth experiment
      h2 by 
        a(href="//clg.name") Cody Lindsay Gordon

  #double-exposure
    #double-exposure-outer(onmousemove="addTransform(event)", onmouseout="clearTransform()")
      #double-exposure-wrapper
        img#base(src="base@2x.jpg")
        figure
          img#bokeh-1(src="bokeh-1@2x.jpg")
          img#bokeh-2(src="bokeh-2@2x.jpg")
          img#bokeh-3(src="bokeh-3@2x.jpg")
          img#bokeh-4(src="bokeh-4@2x.jpg")
          img#exposure(src="exposure@2x.jpg")
        #gloss

