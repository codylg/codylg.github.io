extends layout

block append variables
  - var title = "Altar Tron Counter for Magic: The Gathering"
  - var description = "A custom counter to assist tracking information when playing Altar Tron"
  - var slug = "counter/altar"
  - var card = "counter/altar/card-counter-altar.png"
  - var frontPage = false
  - var fullScreenPage = true

block headExtra
  link(rel="stylesheet", href="/counter/counter.css", async)
  meta(name="apple-mobile-web-app-title", content="Altar Tron")
  meta(name="apple-mobile-web-app-capable", content="yes")
  meta(name="apple-mobile-web-app-status-bar-style", content="black-translucent")
  link(rel="apple-touch-icon", href="/counter/altar/icon-counter-altar.png")

block viewport
  meta(name="viewport", content="width=device-width, initial-scale=1, viewport-fit=cover")

block header

